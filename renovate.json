{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "GitHub Actions Updates",
      "automerge": true
    },
    {
      "managers": ["gomod"],
      "commitMessagePrefix": "fix: ",
      "postUpdateOptions": ["gomodTidy"]
    }
  ]
}
